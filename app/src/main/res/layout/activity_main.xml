<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:id="@+id/vk"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/vk"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/fb"
        />



    <com.facebook.login.widget.LoginButton
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:id="@+id/fb"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/fb"
        app:layout_constraintStart_toEndOf="@id/vk"
        app:layout_constraintEnd_toStartOf="@id/gl"
        />

    <ImageButton
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"
        android:id="@+id/gl"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/google"
        app:layout_constraintStart_toEndOf="@id/fb"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/exitBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exit"
        android:background="@color/grayBg"
        android:shadowRadius="3"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toBottomOf="@+id/vk"/>

</androidx.constraintlayout.widget.ConstraintLayout>